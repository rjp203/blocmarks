<h1><%= @topic.title %></h1>
  <div class="row">
    <div class="col-md-8">
      <div class="col-md-4">
        <%= link_to "New BlocMark", new_topic_bookmark_path(@topic), class: 'btn btn-success' %>
      </div>
    </div>
  </div><br>
<div class="row">
  <div class="col-md-8">
    <% @topic.bookmarks.each do |bookmark| %>
      <div class="media">
       <div class="media-body">
         <h4 class="media-heading">
           <%= link_to bookmark.url, topic_bookmark_path(@topic, bookmark) %>
           <small>
             submitted <%= time_ago_in_words(bookmark.created_at) %> ago <br>
           </small>
         </h4>
        </div>
      </div>
     <% end %>
   </div>
    <div class="col-md-4">
      <%= link_to "Edit Topic", edit_topic_path(@topic), class: 'btn btn-success' %>
      <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this Topic?  All BlocMarks associated with this topic will be deleted as well.'} %>
    </div>
 </div>